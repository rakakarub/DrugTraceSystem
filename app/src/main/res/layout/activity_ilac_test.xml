<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaPlanColor"
    android:orientation="vertical"
    tools:context="com.kadircenk.drugtracesystem.ilacTest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@drawable/ilac_takip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingTop="80sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ilacIsmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İlaç ismi bekleniyor..."
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fiyat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İlaç fiyatı bekleniyor..."
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/skt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İlaç son kullanım tarihi bekleniyor..."
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/veri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asfasfasdasf"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/barkod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asfasfasdasf"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/seri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asfasfasdasf"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
